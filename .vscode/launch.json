{
  "version": "0.2.0",
  "configurations": [{
    "type": "node",
    "request": "launch",
    "name": "Launch and Debug",
    "runtimeExecutable": "${workspaceRoot}/backend/node_modules/.bin/ts-node-dev",
    "runtimeArgs": [
      "--respawn",
      "./src/bin/server.ts"
    ],
    "autoAttachChildProcesses": true,
    "internalConsoleOptions": "openOnFirstSessionStart",
    "console": "integratedTerminal",
    "cwd": "${workspaceRoot}/backend"
  }]
}